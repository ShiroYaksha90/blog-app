<div class = "log-in-countainer">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, id: "label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", id: "input" %>
    </div>

    <div class="field">
      <%= f.label :password, id:  "label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", placeholder:  "password", id: "input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", id: "input"  %>
    </div>
  <% end %>

  <%# <%= render "devise/shared/links" %>
</div>